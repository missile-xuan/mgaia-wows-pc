{
  "name": "mgaia-wows-pc",
  "version": "0.2.0",
  "main": "out/electron-app.js",
  "repository": "https://gitee.com/missile_xuan/mgaia-wows-pc",
  "author": "missile_gaia",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "tsc && chcp 65001 && electron ./out/electron-app.js",
    "build": "electron-builder --win --x64"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^18.0.1",
    "electron": "^19.0.7",
    "electron-builder": "^23.1.0",
    "ts-standard": "^11.0.0",
    "typescript": "^4.7.4"
  },
  "ts-standard": {
    "ignore": [
      "/out/"
    ]
  },
  "build": {
    "productName": "mgaia-wows-pc-app",
    "appId": "com.electron.mgaia-wows-pc-app",
    "directories": {
      "output": "build"
    },
    "publish": {
      "provider": "generic",
      "url": ""
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "wows憨批伴侣"
    },
    "win": {
      "icon": "./assets/app.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "electron-updater": "^5.0.5"
  }
}
